div
    form(method="POST").form
        .group
            label(for="name") Name
            input(type="text" placeholder="Name" name="name" required value=(formData && formData.name))

            - const nameErrors = errors && errors.name ? errors.name : [];
            if (nameErrors.length > 0)
                each error in nameErrors
                    p#error= error

        .group
            label(for="surname") Surname
            input(type="text" placeholder="Surname" name="surname" required value=(formData && formData.surname))

            - const surnameErrors = errors && errors.surname ? errors.surname : [];
            if (surnameErrors.length > 0)
                each error in surnameErrors
                    p#error= error

        .group
            label(for="birthDate") Birth Date 
            input(type="date" placeholder="####" name="birthDate" required value=(formData && formData.birthDate))

            - const birthDateErrors = errors && errors.birthDate ? errors.birthDate : [];
            if (birthDateErrors.length > 0)
                each error in birthDateErrors
                    p#error= error

        .group
            label(for="email") Email 
            input(type="email" placeholder="myMail@ukr.net" name="email" required value=(formData && formData.email))

            - const emailErrors = errors && errors.email ? errors.email : [];
            if (emailErrors.length > 0)
                each error in emailErrors
                    p#error= error

        .group
            label(for="password") Password
            input(type="password" placeholder="Password123" name="password" required)

            - const passwordErrors = errors && errors.password ? errors.password : [];
            if (passwordErrors.length > 0)
                each error in passwordErrors
                    p#error= error

        button(type="submit") Save New User
